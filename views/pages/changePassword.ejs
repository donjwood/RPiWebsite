<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <div id="app" v-cloak>
            <header>
                <% include ../partials/header %>
            </header>
            <main>
                <div class="container">
                    <% if (!locals.passwordChangeSuccess) { %>
                        <div class="row">
                            <div class="col-12">
                                <change-password
                                    error-message = '<%= locals.errorMessage %>'
                                    user-id= '<%=locals.user.id%>'
                                ></change-password>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-success" role="alert">
                                    <i class="fas fa-check"></i> Successfully changed password.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a href="/users/changePassword">Change the password again.</a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </main>
            <footer class="border-top footer text-muted bg-dark">
                <% include ../partials/footer %>
            </footer>
        </div>
        <script src="/build/bundle.js"></script>
    </body>
</html> 