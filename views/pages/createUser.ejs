<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <div id="app" v-cloak>
            <header>
                <% include ../partials/header %>
            </header>
            <main>
                <div class="container">
                    <% if (!locals.createUserSuccess) { %>
                        <div class="row">
                            <div class="col-12">
                                <create-user></create-user>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="row">
                            <div class="col-12">
                                <div class="alert alert-success" role="alert">
                                    <i class="fas fa-check"></i> User created.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <a href="/users/createUser">Create another user.</a>
                            </div>
                        </div>
                    <% } %>
                </div>
            </main>
            <footer class="border-top footer text-muted bg-dark">
                <% include ../partials/footer %>
            </footer>
        </div>
        <script src="/build/bundle.js"></script>
    </body>
</html> 