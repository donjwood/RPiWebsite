<!DOCTYPE html>
<html>
    <head>
        <% include ../../partials/head %>
    </head>
    <body>
        <header>
            <% include ../../partials/header %>
        </header>
        <main>
            <form action="/login/login" method="POST">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <div class="card mx-auto" style="max-width:400px;">
                                <h5 class="card-header">Login</h5>
                                <div class="card-body">
                                    <div class="card-text">
                                        <div class="form-group row">
                                            <label for="txtUserName" class="col-sm-4 col-form-label">Username</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" name="txtUserName" value="<%= locals.body ? body.txtUserName : '' %>">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="txtPassword" class="col-sm-4 col-form-label">Password</label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control" name="txtPassword" value="<%= locals.body ? body.txtPassword : '' %>">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-12 text-center">
                                                <button type="submit" class="btn btn-primary">Sign in</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div> 
            </form>
        </main>
        <footer>
            <% include ../../partials/footer %>
        </footer>
    </body>
</html> 