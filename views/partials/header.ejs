<div id="headerApp" v-cloak>
    <b-navbar toggleable="lg" type="dark" variant="dark" fixed="top">
        <b-navbar-brand href="/"><img src="/images/RPi-Logo-Reg-SCREEN-20X24.png" /> Galileo</b-navbar-brand>
        <b-navbar-toggle target="nav-collapse"></b-navbar-toggle>
        <b-collapse id="nav-collapse" is-nav>
            <b-navbar-nav>
                <b-nav-item href="/">Home</b-nav-item>
            </b-navbar-nav>
            <b-navbar-nav class="ml-auto">
                <b-nav-form>
                    <% if (!session || !session.user) { %>
                        <a href="/login" class="btn btn-outline-light"><i class="fas fa-sign-in-alt"></i> Login</a>
                    <% } else { %>
                        <b-nav-item-dropdown text="<%=session.user.firstName%> <%=session.user.lastName%>" right>
                            <b-dropdown-item href="#"><i class="fas fa-user-edit"></i> Edit User</b-dropdown-item>
                            <b-dropdown-item href="/changePassword"><i class="fas fa-key"></i> Change Password</b-dropdown-item>
                            <b-dropdown-item href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</b-dropdown-item>
                        </b-nav-item-dropdown>
                    <% } %>
                </b-nav-form>
            </b-navbar-nav>
        </b-collapse>
    </b-navbar>
</div>
