                    <b-nav-item-dropdown text="<%=user.firstName%> <%=user.lastName%>" right>
                        <b-dropdown-item href="/users/editUser"><i class="fas fa-user-edit"></i> Edit User</b-dropdown-item>
                        <b-dropdown-item href="/users/changePassword"><i class="fas fa-key"></i> Change Password</b-dropdown-item>
                        <b-dropdown-item href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</b-dropdown-item>
                    </b-nav-item-dropdown>
                <% } %>
            </b-navbar-nav>
